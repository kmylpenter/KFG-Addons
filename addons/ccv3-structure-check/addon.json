{
  "name": "ccv3-structure-check",
  "displayName": "CCv3 Structure Check",
  "version": "1.1.0",
  "description": "CCv3 infrastructure: auto-create thoughts/ structure + ledger staleness warnings based on ctx%",
  "author": "KFG",
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "node \"$ADDON_DIR/hooks/dist/ccv3-structure-check.js\""
      }
    ],
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "node \"$ADDON_DIR/hooks/dist/ledger-staleness-warning.js\""
      }
    ]
  },
  "scripts": {
    "postinstall": "powershell -ExecutionPolicy Bypass -File \"%ADDON_DIR%\\install.ps1\""
  }
}
