{
  "_comment": "Safe Permissions v3 - YOLO Mode Protection",
  "_description": "Warstwa 1 (settings.json) + Warstwa 2-4 (hook)",
  "permissions": {
    "allow": [
      "Bash(trash:*)",

      "Bash(git:*)",
      "Bash(gh:*)",

      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(npx:*)",
      "Bash(bun:*)",

      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pip:*)",
      "Bash(uv:*)",
      "Bash(pytest:*)",

      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(echo:*)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(cd:*)",

      "Bash(docker:*)",
      "Bash(docker-compose:*)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(del:*)",
      "Bash(rm)",
      "Bash(Remove-Item:*)",

      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(mkfs.*:*)",
      "Bash(fdisk:*)",
      "Bash(parted:*)",
      "Bash(diskpart:*)",
      "Bash(format:*)",

      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(**/credentials/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/id_rsa)",
      "Read(**/id_ed25519)",
      "Write(~/.ssh/**)",
      "Edit(~/.ssh/**)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean:*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ]
  },
  "_layers": {
    "1_settings": "Proste pattern matching (rm:*, dd:*, mkfs:*)",
    "2_hook_catastrophic": "Regex dla zlozone komendy (rm -rf /, dd of=/dev/)",
    "3_hook_critical": "Ochrona sciezek (.git/, node_modules/, package.json)",
    "4_hook_delete": "Przekierowanie rm -> trash",
    "5_hook_suspicious": "Ostrzezenia dla find -delete, xargs rm, git push --force"
  }
}
